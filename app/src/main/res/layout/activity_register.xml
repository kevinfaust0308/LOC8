<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hongkong"
    tools:context="com.monsoonblessing.kevinfaust.loc8personal.Activities.RegisterActivity">

    <LinearLayout
        android:background="@drawable/dark_gradient"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="-20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/logo"/>

        <TextView
            android:textColor="@color/md_white_1000"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:text="Choose a profile picture"/>

        <ImageButton
            android:layout_gravity="center_horizontal"
            android:id="@+id/upload_pic_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            app:srcCompat="@drawable/man"
            android:layout_marginTop="11dp" />

        <EditText
            android:textColorHint="@color/md_white_1000"
            android:textColor="@color/md_white_1000"
            android:layout_marginTop="5dp"
            android:id="@+id/name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:drawableTint="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"
            android:textColor="@color/md_white_1000"
            android:drawableRight="@drawable/mail"
            android:id="@+id/email_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:drawableTint="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"
            android:textColor="@color/md_white_1000"
            android:drawableRight="@drawable/padlock"
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <EditText
            android:drawableTint="@color/md_white_1000"
            android:textColorHint="@color/md_white_1000"
            android:textColor="@color/md_white_1000"
            android:drawableRight="@drawable/padlock"
            android:id="@+id/confirm_password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textSize="20sp" />


        <Button
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="@color/md_teal_200"
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register" />


    </LinearLayout>

</LinearLayout>
